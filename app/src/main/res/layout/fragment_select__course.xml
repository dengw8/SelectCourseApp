<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.duang1996.selectcourseapp.fragement.Select_CourseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选课学年："
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2018"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选课学期："
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秋季学期"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/general_compulsory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:gravity="center"
            android:text="公必"
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:id="@+id/general_electiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:gravity="center"
            android:text="公选"
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:id="@+id/major_required"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:gravity="center"
            android:text="专必"
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:id="@+id/compulsory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:gravity="center"
            android:text="专选"
            android:textSize="20sp"
            android:textColor="#2E8B57"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="已选课程名称"
            android:textColor="#000000" />
         <view
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="任课老师"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学分"
            android:textColor="#000000"/>
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="课程类型"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="上课时间"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"
            android:textColor="#000000" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969" />

    <ListView
        android:id="@+id/selected_list"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="已选课程名称"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="任课老师"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学分"
            android:textColor="#000000"/>
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="课程类型"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="上课时间"
            android:textColor="#000000" />
        <view
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#696969"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="操作"
            android:textColor="#000000" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969" />

    <ListView
        android:id="@+id/selectable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>