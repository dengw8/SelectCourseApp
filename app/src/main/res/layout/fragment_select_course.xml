<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.duang1996.selectcourseapp.fragement.Select_CourseFragment">

    <include
        android:id="@+id/tab2"
        layout="@layout/titlebar_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选课学年："
            android:textSize="18sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2018"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选课学期："
            android:textSize="18sp"
            android:textColor="#2E8B57"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秋季学期"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/general_compulsory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:padding="5dp"
            android:gravity="center"
            android:text="公必"
            android:textSize="15sp"
            android:textColor="@color/course_type_non" />
        <TextView
            android:id="@+id/general_elective"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:padding="5dp"
            android:gravity="center"
            android:text="公选"
            android:textSize="15sp"
            android:textColor="@color/course_type_non"/>
        <TextView
            android:id="@+id/major_compulsory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:padding="5dp"
            android:gravity="center"
            android:text="专必"
            android:textSize="15sp"
            android:textColor="@color/course_type_non"/>
        <TextView
            android:id="@+id/major_elective"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight= "1"
            android:padding="5dp"
            android:gravity="center"
            android:text="专选"
            android:textSize="15sp"
            android:textColor="@color/course_type_non"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="课程名称"
            android:textSize="12sp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="任课老师"
            android:textSize="12sp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学分"
            android:textSize="12sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="筛选方式"
            android:textSize="12sp"
            android:textColor="#000000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="上课时间"
            android:textSize="12sp"
            android:textColor="#000000" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/selectable_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>